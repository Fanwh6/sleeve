/* components/spu/index.wxss */
.container{
    width: 340rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, 0.2);
    margin: 30rpx 0;
    background-color: #fff;
}
.img{
    /* width: 100%; */
}
.inner-container{
    display: flex;
    flex-direction: column;
    padding: 28rpx 16rpx;
}
.title{
    color: #333;
    font-size: 28rpx;
}
.tags{
    display: flex;
    margin: 8rpx 5rpx 8rpx 0;
    flex-wrap: wrap;
}
.l-tag{
    background-color: #DCEBE6 !important;
    color: #157658 !important;
    height: 36rpx !important;
    padding: 0 5rpx !important;
    margin-right: 10rpx;
}
.price{
    display: flex;
}
.discount-img{
    margin-left: 20rpx;
}
.subtitle{
    color: #999;
    font-size: 24rpx;
    margin-top: 8rpx;
}