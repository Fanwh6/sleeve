/* components/cell/index.wxss */
.container{
    height: 60rpx;
    border: 2rpx solid #333333;
    padding: 2rpx;
    box-sizing: border-box;
}
.inner-container{
    height: 100%;
    padding: 0 15rpx;
    display: flex;
    align-items: center;
    background-color: #fff;
    font-size: 24rpx;
}
.img{
    display: flex;
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}
.forbidden{
    border: 2rpx dotted #bbb;
    color: #bbb;
}
.s-outer{
    border: 2rpx solid #157658;
    color: #fff;
}
.s-inner{
    background-color: #157658;
}