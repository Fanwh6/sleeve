/* components/spu-description/index.wxss */
.container{
    width: 100%;
    box-sizing: border-box;
    padding: 34rpx 30rpx 26rpx 30rpx;
    display: flex;
    justify-content: space-between;
    background-color: #fff;
}
.left{
    flex: 1;
    display: flex;
    flex-direction: column;
}
.title{
    font-size: 34rpx;
    color: #333;
    font-weight: 400;
    letter-spacing: 2rpx;
}
.tags{
    margin-top: 18rpx;
    display: flex;
}
.l-tag {
    background-color: #DCEBE6 !important;
    color: #157658 !important;
    height: 36rpx !important;
    padding: 0 5rpx !important;
    margin-right: 10rpx;
}
.sub-title{
    font-size: 28rpx;
    color: #999;
    margin-top: 18rpx;
}
.price {
    display: flex;
    align-items: baseline;
    margin-top: 18rpx;
}

.discount-img {
    margin-left: 20rpx;
}

.subtitle {
    color: #999;
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 8rpx;
}
.discount-tag{
    position: relative !important;
    bottom: 4rpx !important;
    margin-left: 50rpx;
    width: 50rpx;
}
.right{
    margin-left: 20rpx;
    display: flex;
    justify-content: flex-end;
    width: 78rpx;
    height: 120rpx;
    border-left: 2px dashed #f5f5f5;
}
.inner{
    width: 50rpx;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #DCEBE6;
}
.inner text{
    font-size: 20rpx;
    color: #157658;
}