/* components/realm/index.wxss */
.container {
    box-sizing: border-box;
    /* padding: 30rpx; */
    background-color: #fff;
    max-height: 1000rpx;
    min-height: 700rpx;
}

.inner-container {
    padding: 30rpx 30rpx 0 30rpx;
}

.sku-preview {
    display: flex;
}

.sku-img {
    width: 160rpx;
    height: 160rpx;
}

.sku-description {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.title {
    font-size: 28rpx;
    color: #333;
}

.price-row {
    display: flex;
    align-items: baseline;
}

.discount-img {
    margin-left: 20rpx;
}

.sku-pending {
    font-size: 20rpx;
}

.hr {
    margin-top: 30rpx;
    width: 690rpx;
    height: 2rpx;
    background-color: #e9e9e9;
}

.stock {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
}

.stock-pinch {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #d20109;
}

.sku-pending>text:first-child {
    color: #999;
}

.sku-pending>text:nth-child(2) {
    margin-left: 10rpx;
    color: #666;
}

.counter-container {
    margin-top: 34rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 200rpx;
}

.counter-contai  ner text {
    font-size: 24rpx;
    color: #555;
}

.bottom-btn {
    height: 100rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #333;
    position: absolute;
    bottom: 0;
    border: 0;
}

.out-stock {
    background-color: #DCEBE6;
}

.buy {
    height: 100rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 0;
    border: 0;
    background-color: #157658;
}

.bottom-btn text {
    color: #fff;
}