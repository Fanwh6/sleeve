/* components/spu/index.wxss */
.container {
    width: 340rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, 0.2);
    margin: 30rpx 0 10rpx 0;
    background-color: #fff;
}

.img {
    width: 100%;
    height: 340rpx;
}

.inner-container {
    display: flex;
    flex-direction: column;
    padding: 28rpx 16rpx;
    height: 210rpx;
}

.title {
    color: #333;
    font-size: 28rpx;
}

.tags {
    display: flex;
    margin: 8rpx 5rpx 8rpx 0;
    flex-wrap: wrap;
}

.l-tag {
    background-color: #DCEBE6 !important;
    color: #157658 !important;
    height: 36rpx !important;
    padding: 0 5rpx !important;
    margin-right: 10rpx;
}

.price {
    display: flex;
}

.discount-img {
    margin-left: 20rpx;
}

.subtitle {
    width: 100%;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    /* 作为弹性伸缩盒子模型显示 */
    display: -webkit-box;
    /* 设置伸缩盒子的子元素排列方式--从上到下垂直排列 */
    -webkit-box-orient: vertical;
    /* 显示的行 */
    -webkit-line-clamp: 2;
    color: #999;
    font-size: 24rpx;
    margin-top: 8rpx;
}