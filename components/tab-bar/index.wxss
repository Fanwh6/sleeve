/* components/tab-bar/index.wxss */
.sleeve {
    font-family: 'sleeve' !important;
    color: #157658 !important;
}
.container{
    width: 100%;
    height: 100rpx;
    display: flex;
    background-color: #fff;
}
.btn-font{
    color: #fff;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;

}
.buy{
    background-color: #157658;
    width: 260rpx;
    height: 100%;
}
.cart{
    background-color: #333;
    width: 260rpx;
    height: 100%;
}
.icons{
    box-sizing: border-box;
    padding-left: 16rpx;
    padding-right: 22rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 232rpx;
    height: 100%;
    color: #999;
}
.icons > view{
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.icons > view:nth-child(2){
    padding-top: 6rpx;
}
.icons text {
    font-size: 20rpx;
}