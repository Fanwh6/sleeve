.top{
  width: 100%;
  height: 680rpx;
}
.tabbar{
    position: fixed;
    bottom: 0;
}
.sku-pending{
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx;
}
.specs > text:first-child{
  color: #999;
  font-size: 24rpx;
}
.specs > text:nth-child(2){
  font-size: 24rpx;
  color: #157658;
}
.explain{
  margin-top: 10rpx;
  background-color: #fff;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail-img-container{
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}
.detail-img{
  display: flex;
  width: 100%;
}
